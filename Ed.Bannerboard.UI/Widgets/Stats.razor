@inherits WidgetBase

<div class="card">
    <div class="card-header">
        Stats
    </div>
    <div class="card-body">
        @if (statsModel != null)
        {
            <table class="table table-sm table-wars">
                <tbody>
                    <tr>
                        <td>Mod version</td>
                        <td>@(statsModel.Version == null ? "0.1.0" : statsModel.Version)</td>
                    </tr>
                    <tr>
                        <td>Messages received</td>
                        <td>@statsModel.ReceivedMessageCount</td>
                    </tr>
                    <tr>
                        <td>Last message size</td>
                        <td>@statsModel.LastMessageBytes B</td>
                    </tr>
                </tbody>
            </table>
        }
        else
        {
            <span>No data.</span>
        }
    </div>
</div>

@code {
    private readonly Version _minimumSupportedVersion = new Version("0.2.0");
    private StatsModel statsModel;

    public override bool CanUpdate(object model, Version version)
    {
        return IsCompatible(version, _minimumSupportedVersion) && model is StatsModel;
    }

    public override Task Update(object model)
    {
        statsModel = model as StatsModel;
        StateHasChanged();

        return Task.CompletedTask;
    }
}
